{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release:prerelease": "lerna publish prerelease --pre-dist-tag=rc --preid=rc",
    "release:prepatch": "lerna publish prepatch --pre-dist-tag=rc --preid=rc",
    "release:preminor": "lerna publish preminor --pre-dist-tag=rc --preid=rc",
    "release:premajor": "lerna publish premajor --pre-dist-tag=rc --preid=rc",
    "release:patch": "lerna publish patch",
    "release:minor": "lerna publish minor",
    "release:major": "lerna publish major",
    "commit": "git cz",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write packages/**/*/*.{js,jsx,ts,tsx}"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@commitlint/cli": "^11.0.0",
    "@types/react-native": "^0.63.35",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "babel-jest": "^26.6.3",
    "commitizen": "^4.2.2",
    "commitlint-config-cz": "^0.13.2",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-react-native": "^3.10.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "metro-react-native-babel-preset": "^0.64.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{md,json}": [
      "prettier --write"
    ]
  }
}
