{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "a": "lerna add",
    "b": "lerna bootstrap",
    "c": "lerna changed",
    "w": "yarn add --ignore-workspace-root-check --dev",
    "p": "lerna publish",
    "r": "lerna run",
    "commit": "git cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "commitizen": "^4.2.2",
    "commitlint-config-cz": "^0.13.2",
    "cz-customizable": "^6.3.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "typescript": "^4.0.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
